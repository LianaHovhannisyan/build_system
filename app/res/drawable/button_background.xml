<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#534954" />

            <stroke android:width="1dp" android:color="#2E2E2E" />

            <corners android:radius="6dp" />

            <padding android:bottom="3dp" android:left="10dp" android:right="10dp" android:top="3dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#191919" android:centerX="30%" android:endColor="#000000" android:startColor="#858585" android:type="linear" />

            <stroke android:width="1dp" android:color="#2E2E2E" />

            <corners android:radius="6dp" />

            <padding android:bottom="3dp" android:left="10dp" android:right="10dp" android:top="3dp" />
        </shape></item>

</selector>